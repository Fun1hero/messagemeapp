<%= form_for(@user, html: {class: "ui form card cender aligned raised very padded text container segment", role: "form"}) do |user| %>
  <div class="container segment">
    <div class="field">
      <%= user.label :username, "Username" %>
      <div class="ui left icon input">
        <%= user.text_field :username, placeholder: "Username" %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= user.label :password, "Password" %>
      <div class="ui left icon input">
        <%= user.password_field :password, placeholder: "Password" %>
        <i class="lock icon"></i>
      </div>
    </div>

    
    <%= user.select :color, options_for_select(User::COLOR_OPTIONS, (@user.color)), { include_blank: 'None'}, class: "ui selection dropdown" %>

    <%= user.submit(@user.new_record? ? "Sign up" : "Update", class: "ui green submit button") %>
  </div>
<% end %>
